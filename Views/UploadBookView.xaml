<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BookReaderApp.Models"
             x:Class="BookReaderApp.Views.UploadBookView"
             Title="UploadBookView">

    <ContentPage.BindingContext>
        <local:BookModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label Text="Upload your book"
           VerticalOptions="Center" 
           HorizontalOptions="Center" />

        <!-- Upload form -->
        <Entry Placeholder="Title" Text="{Binding Title}" x:Name="Title" />
        <Entry Placeholder="Author" Text="{Binding Author}" x:Name="Author" />
        <Button Text="Upload Image" Clicked="UploadImageButton_Clicked" />
        <Image x:Name="bookImage" />
        <Button Text="Upload PDF" Clicked="UploadPdfButton_Clicked" />
        <Label x:Name="pdfLabel" Text="{Binding PdfFileName}" />
        <Entry Placeholder="Category" Text="{Binding Category}" x:Name="Category" />
        <DatePicker Date="{Binding PublishedDate}" x:Name="datePicker" />
        <Editor Placeholder="Description" Text="{Binding Description}" x:Name="Description"/>

        <Button Text="Upload" Clicked="UploadButtonClicked" />
    </StackLayout>
</ContentPage>
