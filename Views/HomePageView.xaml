<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookReaderApp.Views.HomePageView"
             Title="HomePageView">
    <VerticalStackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="30">
            <Image 
                Source="https://aka.ms/campus.jpg"
                HeightRequest = "185"
                Aspect = "AspectFit"
                SemanticProperties.Description = "dot net bot in a race car number eight" />

            <Button
              x:Name="EditUserBtn"
              Text="Sign Up" 
              SemanticProperties.Hint="Signup Clicked"
              Clicked="SignupClicked"
              WidthRequest="150"/>

        </StackLayout>
        

        <Label
            x:Name="ValidationField"
            Text=""
            HorizontalOptions="Start"
            VerticalOptions="Start" />  

    </VerticalStackLayout>
</ContentPage>