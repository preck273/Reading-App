<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookReaderApp.Views.BookImageView"
             Title="BookImageView">
    <VerticalStackLayout>
        <Label 
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>


    <VerticalStackLayout>
        <Label Text="Book Image" VerticalOptions="Center" HorizontalOptions="Center" />
        <Image x:Name="bookImage" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"  WidthRequest="580" />
    </VerticalStackLayout>

</ContentPage>