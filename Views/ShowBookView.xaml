<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookReaderApp.Views.ShowBookView"
             Title="ShowBookView">
    <ScrollView>
        <VerticalStackLayout>
            <Button
              x:Name="HomeBtn"
              Text="Back to HomePage" 
              SemanticProperties.Hint="Home Clicked"
              Clicked="HomeClicked"
              HorizontalOptions ="End"
              BackgroundColor="YellowGreen"
                HeightRequest="10"
              WidthRequest="150"/>
            <Label Text="Book Details" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

            <StackLayout x:Name="BooksLayout" Orientation="Vertical" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>